{
  "name": "lm-top-app",
  "version": "1.1.0",
  "description": "LiveMestre Sports Overlay System",
  "main": "src/main/main.js",
  "author": "LiveMestre",
  "license": "MIT",
  "private": true,
  "scripts": {
    "limpar": "rm -rf dist/ build/ out/ release/ node_modules/.cache && echo '‚úÖ Diret√≥rios de build limpos'",
    "pre-build": "npm run limpar",
    
    "start": "electron .",
    "dev": "electron . --dev",
    
    "build": "npm run pre-build && electron-builder --publish=never",
    "build:mac": "npm run pre-build && electron-builder --mac --publish=never",
    "build:win": "npm run pre-build && electron-builder --win --publish=never",
    "build:todos": "npm run pre-build && electron-builder --mac --win --publish=never",
    "pack": "npm run pre-build && electron-builder --dir",
    
    "release": "npm run pre-build && electron-builder --publish=onTagOrDraft",
    "release:rascunho": "npm run pre-build && electron-builder --publish=always",
    
    "pos-build": "echo 'üéâ Build conclu√≠do! Arquivos em: dist/' && ls -la dist/ 2>/dev/null || echo 'Nenhum build encontrado'",
    
    "verificar-git": "git status --porcelain | grep -E '^(A|M).*dist/' && echo '‚ùå ERRO: Arquivos de build no git!' || echo '‚úÖ Git limpo'",
    "verificar-tamanho": "du -sh dist/ 2>/dev/null || echo 'Nenhum build encontrado'",
    
    "postinstall": "electron-builder install-app-deps",
    "test": "echo \"Testes n√£o implementados ainda\" && exit 0"
  },
  "build": {
    "appId": "com.livemestre.overlay",
    "productName": "LiveMestre Overlay",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "node_modules/**/*",
      "!**/*.map",
      "!**/node_modules/.cache"
    ],
    "mac": {
      "category": "public.app-category.video",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "assets/icon.icns"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable", 
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "category": "Video"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "artifactName": "LiveMestre-Overlay-Setup-${version}.exe"
    },
    "dmg": {
      "title": "LiveMestre Overlay ${version}",
      "window": {
        "width": 600,
        "height": 400
      }
    }
  },
  "devDependencies": {
    "electron": "^25.0.0",
    "electron-builder": "^24.0.0"
  },
  "dependencies": {
    "electron-store": "^8.1.0"
  }
}